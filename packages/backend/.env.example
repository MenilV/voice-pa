# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://voicepa:dev_password_change_in_production@localhost:5432/voicepa

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
